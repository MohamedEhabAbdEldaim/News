<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/d2">

            <ImageView
                android:id="@+id/fragment_news_details_imv_news_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d150"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginEnd="@dimen/d8"
                android:padding="@dimen/d2" />

            <TextView
                android:id="@+id/fragment_news_details_txt_news_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginEnd="@dimen/d8"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginEnd="@dimen/d8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_news_details_txt_news_published_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_20sp"
                    android:textStyle="bold" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/fragment_news_details_txt_news_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_news_details_txt_news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginEnd="@dimen/d8"
                android:padding="@dimen/d2"

                android:textColor="@color/black"
                android:textSize="@dimen/txt_20sp" />

            <TextView
                android:id="@+id/fragment_news_details_txt_news_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginEnd="@dimen/d8"
                android:padding="@dimen/d2"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_16sp" />

            <TextView
                android:id="@+id/fragment_news_details_txt_news_show_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginEnd="@dimen/d8"
                android:gravity="center"
                android:padding="@dimen/d2"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_news_details_txt_show_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:layout_marginEnd="@dimen/d8"
                android:gravity="center"
                android:padding="@dimen/d2"
                android:textColor="@color/blue"
                android:textSize="@dimen/txt_16sp" />


        </LinearLayout>
    </ScrollView>
</layout>