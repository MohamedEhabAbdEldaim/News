<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d4"
        android:layout_marginTop="@dimen/d4"
        android:layout_marginEnd="@dimen/d4"
        android:background="@drawable/shap_item_view_news_background"
        android:orientation="vertical"
        android:padding="@dimen/d2">

        <ImageView
            android:id="@+id/item_view_news_imv_news_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d120"
            android:padding="@dimen/d2" />

        <TextView
            android:id="@+id/item_view_news_txt_news_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_20sp" />

    </LinearLayout>
</layout>